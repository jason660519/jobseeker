{
  "description": "jobseeker 智能路由系統配置文件",
  "version": "1.0.0",
  "last_updated": "2025-01-27",
  
  "routing_settings": {
    "max_concurrent_agents": 4,
    "default_timeout_seconds": 60,
    "retry_failed_agents": true,
    "max_retries": 2,
    "fallback_enabled": true,
    "confidence_threshold": 0.6
