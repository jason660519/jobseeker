        "preferred_agents": ["indeed", "linkedin"],
        "weight": 1.1
      }
    ]
  },
  
  "agent_preferences": {
    "seek": {
      "priority_boost": 0.1,
      "timeout_seconds": 45,
      "retry_count": 3
    },
    "indeed": {
      "priority_boost": 0.05,
      "timeout_seconds": 60,
      "retry_count": 2
    },
    "linkedin": {
      "priority_boost": 0.15,
      "timeout_seconds": 90,
      "retry_count": 2
    },
    "glassdoor": {
      "priority_boost": 0.0,
      "timeout_seconds": 75,
      "retry_count": 1
    },
    "ziprecruiter": {
      "priority_boost": 0.0,
      "timeout_seconds": 50,
      "retry_count": 2
    },
    "google": {
      "priority_boost": -0.05,
      "timeout_seconds": 30,
      "retry_count": 1
    }
  },
  
  "language_settings": {
    "supported_languages": ["en", "zh", "zh-tw", "zh-hk", "ar", "hi", "bn"],
    "default_language": "en",
    "language_detection": {
      "chinese_threshold": 0.3,
      "arabic_threshold": 0.1
    }
  },
  
  "distance_settings": {
    "local_search_threshold_km": 100,
    "unit_conversions": {
      "mile_to_km": 1.609344,
      "km_to_mile": 0.621371
    },
    "default_search_radius_km": 50
  },
  
  "performance_settings": {
    "cache_enabled": true,
    "cache_duration_minutes": 30,
    "parallel_execution": true,
    "max_workers": 4,
    "request_delay_seconds": 1
  },
  
  "logging_settings": {
    "log_level": "INFO",
    "log_routing_decisions": true,
    "log_execution_times": true,
    "log_file_path": "logs/intelligent_routing.log"
  },
  
  "experimental_features": {
    "ai_query_enhancement": false,
    "dynamic_agent_scoring": false,
    "predictive_routing": false,
    "cross_platform_deduplication": true
  },
  
  "custom_rules": [
    {
      "name": "prefer_local_for_trades",
      "description": "對於技工類職位優先使用本地代理",
      "condition": {
        "keywords": ["electrician", "plumber", "carpenter", "technician", "電工", "水電工", "木工", "技師"],
        "has_location": true
      },
      "action": {
        "boost_local_agents": 0.2,
        "reduce_global_agents": 0.1
      }
    },
    
    {
      "name": "tech_jobs_prefer_linkedin",
      "description": "科技職位優先使用 LinkedIn",
      "condition": {
        "keywords": ["software", "developer", "engineer", "programmer", "tech", "程式", "工程師", "開發"]
      },
      "action": {
        "boost_agents": ["linkedin"],
        "boost_value": 0.15
      }
    },
    
    {
      "name": "entry_level_prefer_indeed",
      "description": "入門級職位優先使用 Indeed",
      "condition": {
        "keywords": ["entry level", "junior", "graduate", "intern", "fresher", "新鮮人", "實習", "初級"]
      },
      "action": {
        "boost_agents": ["indeed"],
        "boost_value": 0.1
      }
    }
  ]
}
