  "industry_categories": {
    "custom_industries": [
      {
        "name": "Fintech",
        "keywords": [
          "fintech", "financial technology", "blockchain", "cryptocurrency",
          "digital banking", "payment systems", "robo advisor", "insurtech",
          "金融科技", "區塊鏈", "數位銀行", "支付系統"
        ],
        "preferred_agents": ["linkedin", "indeed", "glassdoor"],
        "weight": 1.3
      },
      
      {
        "name": "E_commerce",
        "keywords": [
          "e-commerce", "online retail", "marketplace", "digital commerce",
          "shopify", "amazon", "alibaba", "logistics", "supply chain",
          "電商", "網路零售", "線上購物", "物流", "供應鏈"
        ],
        "preferred_agents": ["indeed", "linkedin"],
        "weight": 1.1
      },
      
      {
        "name": "Gaming",
        "keywords": [
          "game development", "gaming", "unity", "unreal engine", "mobile games",
          "game design", "3d modeling", "animation", "esports",
          "遊戲開發", "遊戲設計", "手機遊戲", "電競"
        ],
        "preferred_agents": ["linkedin", "indeed"],
        "weight": 1.2
      },
      
      {
        "name": "Renewable_Energy",
        "keywords": [
          "renewable energy", "solar", "wind power", "green energy",
          "sustainability", "clean tech", "carbon neutral", "esg",
          "再生能源", "太陽能", "風力發電", "綠能", "永續發展"
